<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color_bottom_sheet"
    android:gravity="center"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="100dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <RelativeLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_height="40dp"
        android:background="@drawable/custom_button_button_sheet">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_detail"
            android:contentDescription="@string/bottom_sheet_slider"
            android:textColor="@android:color/darker_gray" />


    </RelativeLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/timer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/timer_text_bottom_sheet"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/background_color_bottom"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"

        >

        <Button
            android:id="@+id/start_bt"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/custom_back_buttom_sheet"
            android:text="@string/start_text"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/finish_exercise_bt"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/custom_back_buttom_sheet"
            android:text="@string/finish_exercise_bottom_sheet"
            android:textColor="@android:color/black"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/background_color_button_bottom"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="30dp"
        android:paddingEnd="30dp">

        <Button
            android:id="@+id/pause_bt"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/custom_back_buttom_sheet"
            android:text="@string/pause_bottom_sheet"
            android:textColor="@android:color/black"
            android:visibility="gone" />

        <Button
            android:id="@+id/resume_bt"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/custom_back_buttom_sheet"
            android:text="@string/resume_bottom_sheet"
            android:textColor="@android:color/black"
            android:visibility="gone" />

        <Button
            android:id="@+id/cancel_bt"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/custom_cancel_buttom_sheet"
            android:text="@string/cancel_bottom_sheet"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>

