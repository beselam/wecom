<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    android:orientation="vertical"
    tools:context=".ui.SplashFragment">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animm"
            android:contentDescription="@string/athletics_animation"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            app:lottie_autoPlay="true"
            app:lottie_colorFilter="@android:color/white"
            app:lottie_rawRes="@raw/logo"
            tools:layout_editor_absoluteX="130dp"
            tools:layout_editor_absoluteY="24dp" />

        <TextView
            android:id="@+id/spalshLogoTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/bangers"
            android:text="@string/application_logo_name_wecom"
            android:textColor="@android:color/white"
            android:textSize="45sp"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="204dp" />

        <TextView
            android:id="@+id/appMotoTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/signinBt"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_btn_splash"
            android:text="@string/sign_in"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@android:color/black"
            android:transitionName="loginTransition"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="383dp" />

        <Button
            android:id="@+id/signUpBtln"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:background="@drawable/custom_btn_splash"
            android:text="@string/sign_up"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@android:color/black"
            tools:layout_editor_absoluteX="231dp"
            tools:layout_editor_absoluteY="383dp" />
    </LinearLayout>


</LinearLayout>